@model Core.Entities.Job

@{
    ViewData["Job"] = "Details";
}

<h1>Job Details</h1>

<div>
    <h4>Job:</h4>
    <hr />
    
<table>
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Company)</th>
        <th>@Html.DisplayNameFor(model => model.RequiredSkills)</th>
    </tr>
    </thead>
    <tbody>
        @await Html.PartialAsync("_JobTableRow.cshtml", Model)
    </tbody>
</table>

</div>

<div>
    <a asp-action="Index">Back to List</a>
    <a asp-action="CandidateJobMatches" asp-route-jobId=@Model.Id>Find Suitable Candidates</a>
</div>